local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remove existing notification
if playerGui:FindFirstChild("FWSDNotification") then
    playerGui.FWSDNotification:Destroy()
end

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FWSDNotification"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 70)
frame.Position = UDim2.new(1, -340, 1, -90)
frame.BackgroundColor3 = Color3.fromRGB(25, 85, 175)
frame.BackgroundTransparency = 1
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0, 1)
frame.Parent = screenGui

-- Rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = frame

-- Checkmark icon
local icon = Instance.new("ImageLabel")
icon.Size = UDim2.new(0, 30, 0, 30)
icon.Position = UDim2.new(0, 15, 0.5, -15)
icon.BackgroundTransparency = 1
icon.Image = "rbxassetid://7733964641" -- âœ… checkmark image
icon.ImageColor3 = Color3.fromRGB(255, 255, 255)
icon.ImageTransparency = 1
icon.Parent = frame

-- Text label
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -60, 1, 0)
label.Position = UDim2.new(0, 60, 0, 0)
label.BackgroundTransparency = 1
label.Text = "[FWSD] Injected Successfully"
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextTransparency = 1
label.TextSize = 20
label.Font = Enum.Font.GothamBold
label.TextXAlignment = Enum.TextXAlignment.Left
label.Parent = frame

-- Fade-in animation
TweenService:Create(frame, TweenInfo.new(0.4), {BackgroundTransparency = 0.1}):Play()
TweenService:Create(label, TweenInfo.new(0.4), {TextTransparency = 0}):Play()
TweenService:Create(icon, TweenInfo.new(0.4), {ImageTransparency = 0}):Play()

-- Stay on screen for a few seconds
task.delay(4, function()
    -- Fade-out
    TweenService:Create(frame, TweenInfo.new(0.4), {BackgroundTransparency = 1}):Play()
    TweenService:Create(label, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
    TweenService:Create(icon, TweenInfo.new(0.4), {ImageTransparency = 1}):Play()
    task.wait(0.5)
    screenGui:Destroy()
end)
